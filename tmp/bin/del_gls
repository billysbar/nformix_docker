	   then
		rm -r $INFORMIXDIR/etc/zh_tw
	fi
	if test -d $INFORMIXDIR/forms/zh_tw
	   then
		rm -r $INFORMIXDIR/forms/zh_tw
	fi
	if test -d $INFORMIXDIR/demo/tools/zh_tw
	   then
		rm -r $INFORMIXDIR/demo/tools/zh_tw
