remov_TAIWANESE()
	{
	echo "Removing Taiwanese files"
	if test -d $INFORMIXDIR/demo/fgl/zh_tw
	   then
		rm -r $INFORMIXDIR/demo/fgl/zh_tw
	fi
	if test -d $INFORMIXDIR/msg/zh_tw
	   then
		rm -r $INFORMIXDIR/msg/zh_tw
