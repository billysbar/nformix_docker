remov_JAPANESE()
	{
	echo "Removing Japanese files"
	if test -d $INFORMIXDIR/demo/fgl/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/fgl/ja_jp
	fi
	if test -d $INFORMIXDIR/msg/ja_jp
	   then
		rm -r $INFORMIXDIR/msg/ja_jp
	fi
	if test -d $INFORMIXDIR/etc/ja_jp
	   then
		rm -r $INFORMIXDIR/etc/ja_jp
	fi
	if test -d $INFORMIXDIR/forms/ja_jp
	   then
		rm -r $INFORMIXDIR/forms/ja_jp
	fi
	if test -d $INFORMIXDIR/demo/tools/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/tools/ja_jp
	fi
	if test -d $INFORMIXDIR/demo/fglbe/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/fglbe/ja_jp
	fi
	if test -d $INFORMIXDIR/demo/sql/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/sql/ja_jp
	fi
	if test -d $INFORMIXDIR/demo/sql2/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/sql2/ja_jp
	fi
	if test -d $INFORMIXDIR/demo/fgldb/ja_jp
	   then
		rm -r $INFORMIXDIR/demo/fgldb/ja_jp
	fi
	}

echo '

Deletion Script

This installation procedure must be run by root (super-user).
It will delete localization files not needed by this installation.
'

echo install >__install__
chown root __install__ 2> /dev/null

if test $? -ne 0
    then
    echo '
Please rerun this installation procedure as super-user.
'
    rm __install__
    exit 1
fi

: 'Need another test for Sys 5 since chown is valid for files you own'
#
# The owner of __install__ is root now. The chmod 4755 is used to
# test whether the user is root.
#
chmod 4755 __install__ 2> /dev/null

if test $? -ne 0
then
    echo '
Please rerun this installation procedure as super-user.
'
    rm -f __install__
    exit 1
fi

rm __install__

echo '
Press RETURN to continue,
or the interrupt key (usually CTRL-C or DEL) to abort.
'

read I

# Check INFORMIXDIR is set

if test "x$INFORMIXDIR" = "x"
then
    echo "INFORMIXDIR is not set."
    exit 1
fi

# Check if DB_LOCALE is set

if test "x$DB_LOCALE" = "x"
then
    echo "DB_LOCALE is not set."
    echo "Checking CLIENT_LOCALE . . ."
    if test "x$CLIENT_LOCALE" = "x"
    then
        echo "CLIENT_LOCALE also not set"
        echo ""
        echo "Please choose which language to you wish to KEEP."
        echo "1-English"
        echo "2-Japanese"
        echo "3-Korean"
        echo "4-Chinese"
        echo "5-Taiwanese"
        echo "6-Thai"
        echo "Q-Quit"
        read DBLOCALE
    else DBLOCALE=$CLIENT_LOCALE
    fi
else DBLOCALE=$DB_LOCALE
fi

case $DBLOCALE in
    en_us* | 1 )
	   DBLOCALE=English
	   remov_JAPANESE
	   remov_KOREAN
	   remov_CHINESE
	   remov_TAIWANESE
	   remov_THAI
	   ;;
    ja_jp* | 2 )
	   DBLOCALE=Japanese
	   remov_KOREAN
	   remov_CHINESE
	   remov_TAIWANESE
	   remov_THAI
	   ;;
    ko_kr* | 3 )
	   DBLOCALE=Korean
	   remov_JAPANESE
	   remov_CHINESE
	   remov_TAIWANESE
	   remov_THAI
	   ;;
    zh_cn* | 4 )
	   DBLOCALE=Chinese
	   remov_JAPANESE
	   remov_KOREAN
	   remov_TAIWANESE
	   remov_THAI
	   ;;
    zh_tw* | 5 )
	   DBLOCALE=Tawainese
	   remov_JAPANESE
	   remov_KOREAN
	   remov_CHINESE
	   remov_THAI
	   ;;
    th_th | 6 )
	   DBLOCALE=Thai
	   remov_JAPANESE
	   remov_KOREAN
	   remov_CHINESE
	   remov_TAIWANESE
	   ;;
    *|q) ;;
	
esac
if test $DBLOCALE != "q"
then echo "Deletion of non-$DBLOCALE files complete."
fi
exit 0


